<%= simple_form_for @job do |f| %>
  <%= f.input :title, label: 'Título'%>
  <%= f.input :company_id, label: 'Empresa', collection: @companies %>
  <%= f.input :location, label: 'Local'%>
  <%= f.input :category_id, label: 'Categoria', collection: @categories %>
  <%= f.input :description, label: 'Descrição'%>
  <%= f.input :featured, label: 'Destaque', as: :boolean %>
  <%= f.button :submit, submit_text, class: "btn btn-primary" %>
<% end %>
