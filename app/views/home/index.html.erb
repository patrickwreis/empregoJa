<section class="jobs">
  <% @jobs.each do |job| %>
    <div>
      <h1> <%= link_to job.title, job %></h1>
      <% if job.featured %>
        <span><strong>Destaque</strong></span>
      <% end %>
    </div>
    <div>
      <%= job.company.name %>
      <%= job.location %>
    </div>
  <% end %>
</section>
<aside class="empresas">
    <h1>Empresas</h1>
    <% @companies.each do |company|%>
      <%= link_to company.name, company, class: "btn btn-primary" %>
    <% end %>
  </div>
</aside>
<aside class="categorias">
    <h1>Categorias</h1>
    <% @categories.each do |category|%>
      <%= link_to category.name, category, class: "btn btn-primary" %>
    <% end %>
  </div>
</aside>
